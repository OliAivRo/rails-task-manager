<div>
  <h1>My tasks</h1>
</div>

<div>
<% @tasks.each do |task| %>
    <div>
      <% if task.completed %>
        <input type="checkbox" id="task" name="task" checked />
      <% else %>
        <input type="checkbox" id="task" name="task"/>
      <% end %>
      <label for="task"><%= link_to "#{task.title}", task_path(task)%></label>
    </div>
  <% end %>
</div>

<div>
  <%= link_to "Create a new task", new_task_path%>
</div>
